<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.美食地圖" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/background_fragment</item>
    </style>

    <style name="Theme.美食地圖" parent="Base.Theme.美食地圖" />

    <style name="bottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="sideNavigationView.ActiveIndicator" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/background_dialog</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TextAppearance.NavigationView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="primaryButton" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">.1</item>
        <item name="layout_constraintWidth_max">488dp</item>
    </style>

    <style name="primaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">@dimen/text_small_medium</item>
    </style>

    <style name="primaryCheckbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="buttonTint">@color/selector_checkbox</item>
    </style>

    <style name="primaryTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="primaryTextInput" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">@dimen/text_small_medium</item>
    </style>

    <style name="primaryChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipIconTint">@color/icon_primary</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>